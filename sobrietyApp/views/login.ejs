<%- include('partials/header', {title: '| Login'}) %> 

      <div class="card card-body m-5">
        <h1 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i> Login</h1>
        <%- include('partials/messages') %>
        <form action="/login" method="POST">
          <div class="form-group">
            <label for="email">Email</label>
            <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email" autocomplete="off"/>
          </div>
          <div class="form-group">
            <label for="password">Password</label>
            <input type="password" id="password" name="password" class="form-control" placeholder="Enter Password"/>
          </div>
          <button type="submit" class="btn btn-primary my-2">Login</button>
        </form>
        <p class="lead mt-2"> No Account? <a href="/register">Register</a></p>
      </div>
  


<%- include('partials/footer') %> 