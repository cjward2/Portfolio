<%- include('partials/header', {title: '| Register'}) %> 


      <div class="card card-body m-5">
        <h1 class="text-center mb-3"><i class="fas fa-user-plus"></i> Register</h1>
        <!-- include partial for messages to display to user -->
        <%-include('partials/messages') %>
        <form action="/register" method="POST">
          <div class="form-group">
            <label for="name">Name</label>
            <!-- If there is a name and validation doesn't pass we dont want form to clear. -->
            <input type="name" id="name" name="name" class="form-control" placeholder="Enter Name" value="<%= typeof name != 'undefined' ? name : '' %>"/>
          </div>
          <div class="form-group">
            <label for="email">Email</label>
            <input type="email" id="email" name="email" class="form-control" autocomplete="off"  placeholder="Enter Email" value="<%= typeof email != 'undefined' ? email : '' %>"/>
          </div>
          <div class="form-group">
            <label for="password">Password</label>
            <input type="password" id="password"  name="password" class="form-control" placeholder="Create Password" value="<%= typeof password!= 'undefined' ? password : '' %>"/>
          </div>
          <div class="form-group">
            <label for="password2">Confirm Password</label>
            <input type="password" id="password2" name="password2" class="form-control" placeholder="Confirm Password" value="<%= typeof password2 != 'undefined' ? password2 : '' %>"/>
          </div>
          <button type="submit" class="btn btn-primary my-2">Register</button>
        </form>
        <p class="lead mt-2">Have An Account? <a href="/login">Log in</a></p>
      </div>

<%- include('partials/footer') %> 