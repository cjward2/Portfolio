<!-- check if errors exist: if not equal to undefined -> there is an error -->
<% if (typeof errors != 'undefined') { %>
    <% errors.forEach(error => { %>
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <%= error.msg %> 
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
          </div>
    <% }) %>
<% } %>

<!-- If there is a success_msg, then display for user in success colored box -->
<% if (success_msg != '') { %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <%= success_msg %> 
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
<% } %>

<!-- if there is an error_msg, display to user in warning box -->
<% if (error_msg != '') { %>
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <%= error_msg %> 
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
<% } %>

<!-- if there is an error, display to user in warning box -->
<% if (error != '') { %>
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <%= error %> 
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
<% } %>